{% extends 'base.html.twig' %}

{% block title %}Hello TaskController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Tasks : </h1>
        <hr/>
        {% for task in tasks %}
        <div>
            <h3>{{ task.description }}</h3>
            <br/>
            <u>Tags : </u>
            <div>
                {% for tag in task.tags %}
                    <div>- {{ tag.name }}</div>
                {% endfor %}
            </div>
            <br/>
            <hr/>
            {% endfor %}
        </div>
    </div>
{% endblock %}
